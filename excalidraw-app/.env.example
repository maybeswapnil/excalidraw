# Excalidraw Frontend Environment Configuration

# ============================================
# REMOTE SYNC - MongoDB Backend Configuration
# ============================================
# Enable remote sync to MongoDB backend
VITE_ENABLE_REMOTE_SYNC=true

# WebSocket endpoint for MongoDB sync backend
# Format: ws://192.168.1.100:5001 (development)
#         wss://your-domain.com (production with SSL)
VITE_REMOTE_SYNC_ENDPOINT=ws://192.168.1.100:5001

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port for dev server
VITE_APP_PORT=3000

# ============================================
# OPTIONAL: Excalidraw Plus Features
# ============================================
# WebSocket server for collaboration (if using collaboration)
# VITE_APP_WS_SERVER_URL=https://ws.excalidraw.com

# Portal URL for Excalidraw Plus features
# VITE_APP_PORTAL_URL=https://portal.excalidraw.com

# AI Backend URL (if using AI features)
# VITE_APP_AI_BACKEND=https://ai.excalidraw.com

# Firebase configuration (JSON string)
# VITE_APP_FIREBASE_CONFIG={}

# ============================================
# DEVELOPMENT OPTIONS
# ============================================
# Disable live reload / HMR (useful for debugging Service Workers)
# VITE_APP_DEV_DISABLE_LIVE_RELOAD=false

# Disable Sentry error tracking
VITE_APP_DISABLE_SENTRY=false

# Collapse the dev tools overlay by default
VITE_APP_COLLAPSE_OVERLAY=true

# Enable ESLint checks in dev server
VITE_APP_ENABLE_ESLINT=true

# Enable PWA in dev server
VITE_APP_ENABLE_PWA=true

# ============================================
# EXCALIDRAW PLUS
# ============================================
# Landing page URL
VITE_APP_PLUS_LP=https://excalidraw.com

# Excalidraw Plus app URL
VITE_APP_PLUS_APP=https://app.excalidraw.com

# ============================================
# BUILD & VERSION
# ============================================
# Git SHA (set automatically in CI/CD)
# VITE_APP_GIT_SHA=abc123def456
